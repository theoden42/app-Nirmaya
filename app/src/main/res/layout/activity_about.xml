<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".AboutActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp"
        android:transitionName="aboutustrans"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/aboutussymbol" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_marginStart="10dp"
        android:layout_marginTop="27dp"
        android:fontFamily="@font/carter_one"
        android:padding="10dp"
        android:text="School :"
        android:textColor="#FCFCFD"
        android:textSize="30dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="123dp"
        android:layout_height="111dp"
        android:layout_marginStart="16dp"
        android:background="#ffff"
        android:layout_below="@+id/textView8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        app:srcCompat="@drawable/school" />


    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="111dp"
        android:layout_below="@id/textView8"
        android:layout_toRightOf="@id/imageView3"
        android:fontFamily="@font/aclonica"
        android:padding="15dp"
        android:text="Guru Har Rai Academy"
        android:textAlignment="center"
        android:textColor="#FDFDFD"
        android:textSize="26dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        tools:layout_editor_absoluteY="367dp" />
    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="School Code :"
        android:layout_below="@+id/imageView3"
        android:layout_marginStart="10dp"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/carter_one"
        android:textColor="#FDFDFD"
        android:textAlignment="center"
        android:textSize="30dp"/>

    <TextView
        android:id="@+id/textView12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CF29"
        android:layout_toRightOf="@id/textView10"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:textSize="26dp"
        android:textStyle="bold"
        android:fontFamily="@font/aclonica"
        android:textAlignment="center"
        android:textColor="#FBFBFB"
        android:layout_below="@id/textView9"/>

    <TextView
        android:id="@+id/textView13"
        android:layout_width="208dp"
        android:layout_height="119dp"
        android:layout_below="@+id/textView12"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/carter_one"
        android:padding="10dp"
        android:text="Made by:"
        android:textColor="#FDFDFD"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="113dp"
        android:layout_below="@+id/textView12"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="-2dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="9dp"
        android:layout_toRightOf="@id/textView13"
        android:fontFamily="@font/aclonica"
        android:gravity="center"
        android:padding="10dp"
        android:text="Divyansh Tripathi &amp; Adarsh Kumar"
        android:textAlignment="center"
        android:textColor="#FBFBFB"
        android:textSize="26dp"
        android:textStyle="bold" />

</RelativeLayout>