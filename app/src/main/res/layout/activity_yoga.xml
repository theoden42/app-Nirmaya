<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:orientation="vertical"
    tools:context=".PharmacyActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="33dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/img"
            android:background="#00070707"
            android:fontFamily="@font/aclonica"
            android:text="Yoga Pose"
            android:textAlignment="center"
            android:textColor="#FBF9F9"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:paddingStart="10dp"
            android:src="@drawable/meditation"
            android:transitionName="yogatrans" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/textView5"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="match_parent"
                            android:layout_height="194dp"
                            app:srcCompat="@drawable/bridge_pose" />

                        <TextView
                            android:id="@+id/textView133"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/imageView4"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/aclonica"
                            android:text="Bridge – Bandha Sarvangasana"
                            android:textAlignment="center"
                            android:textColor="#040404"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/textView134"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@id/textView133"
                            android:padding="10dp"
                            android:text="Hip joints opener, it also strengthens your spine, opens the chest, and improves your spinal flexibility in addition to stimulating your thyroid."
                            android:textAlignment="center"
                            android:layout_marginBottom="5dp"
                            android:textColor="#050505"
                            android:textSize="18sp" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/imageView5"
                            android:layout_width="match_parent"
                            android:layout_height="194dp"
                            app:srcCompat="@drawable/downward_dog_pose" />

                        <TextView
                            android:id="@+id/textView135"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/imageView5"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/aclonica"
                            android:text="Downward Dog – Adho Mukha Svanasana"
                            android:textAlignment="center"
                            android:textColor="#040404"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/textView136"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@id/textView135"
                            android:padding="10dp"
                            android:text="Lengthens and decompresses the spine, stretches the hamstrings, strengthens your arms, flushes your brain with fresh oxygen and calms your mind."
                            android:textAlignment="center"
                            android:layout_marginBottom="5dp"
                            android:textColor="#050505"
                            android:textSize="18sp" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/imageView6"
                            android:layout_width="match_parent"
                            android:layout_height="194dp"
                            app:srcCompat="@drawable/easy_yoga_pose" />

                        <TextView
                            android:id="@+id/textView137"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/imageView6"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/aclonica"
                            android:text="Easy Pose – Sukhasana"
                            android:textAlignment="center"
                            android:textColor="#040404"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/textView138"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@id/textView137"
                            android:layout_marginTop="2dp"
                            android:padding="10dp"
                            android:text="Hip opener, it is calming, and it eases the menstrual pain for women in addition to lowering the level of anxiety."
                            android:textAlignment="center"
                            android:layout_marginBottom="5dp"
                            android:textColor="#050505"
                            android:textSize="18sp" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/imageView7"
                            android:layout_width="match_parent"
                            android:layout_height="194dp"
                            app:srcCompat="@drawable/warrior_1_pose" />

                        <TextView
                            android:id="@+id/textView139"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/imageView7"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/aclonica"
                            android:text="Warrior 1 –              Virabhadrasana I"
                            android:textAlignment="center"
                            android:textColor="#040404"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/textView140"
                            android:layout_width="369dp"
                            android:layout_height="116dp"
                            android:layout_below="@id/textView139"
                            android:layout_marginTop="-1dp"
                            android:padding="10dp"
                            android:text="Strengthens the muscles of your knees and feet, it stretches your shoulders and spine, and it improves your focus."
                            android:textAlignment="center"
                            android:textColor="#050505"
                            android:layout_marginBottom="5dp"
                            android:textSize="18sp" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/imageView8"
                            android:layout_width="match_parent"
                            android:layout_height="194dp"
                            app:srcCompat="@drawable/warrior_2_pose" />

                        <TextView
                            android:id="@+id/textView141"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/imageView8"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/aclonica"
                            android:text="Warrior 2 –              Virabhadrasana II"
                            android:textAlignment="center"
                            android:textColor="#040404"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/textView142"
                            android:layout_width="369dp"
                            android:layout_height="match_parent"
                            android:layout_below="@id/textView141"
                            android:layout_marginTop="4dp"
                            android:padding="10dp"
                            android:text="Strengthens your legs and arms, opens your chest and shoulders, and it contracts your abdominal organs."
                            android:textAlignment="center"
                            android:textColor="#050505"
                            android:textSize="18sp" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/imageView9"
                            android:layout_width="match_parent"
                            android:layout_height="194dp"
                            app:srcCompat="@drawable/triangle_pose" />

                        <TextView
                            android:id="@+id/textView143"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/imageView9"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/aclonica"
                            android:text="Triangle – Trikonasana"
                            android:textAlignment="center"
                            android:textColor="#040404"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/textView144"
                            android:layout_width="369dp"
                            android:layout_height="match_parent"
                            android:layout_below="@id/textView143"
                            android:layout_marginTop="4dp"
                            android:padding="10dp"
                            android:text="Improves the flexibility of your spine; it helps with the alignment of your shoulders; it relieves back pain and stiffness in the neck area."
                            android:textAlignment="center"
                            android:layout_marginBottom="5dp"
                            android:textColor="#050505"
                            android:textSize="18sp" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/imageView10"
                            android:layout_width="match_parent"
                            android:layout_height="194dp"
                            app:srcCompat="@drawable/the_chair_pose" />

                        <TextView
                            android:id="@+id/textView145"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/imageView10"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/aclonica"
                            android:text="Chair – Utkatasana"
                            android:textAlignment="center"
                            android:textColor="#040404"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/textView146"
                            android:layout_width="369dp"
                            android:layout_height="match_parent"
                            android:layout_below="@id/textView145"
                            android:layout_marginTop="4dp"
                            android:padding="10dp"
                            android:text="Tones your leg muscles, strengthens your hip reflexors, ankles, calves and back. It stretches the chest and shoulders. It reduces symptoms of flat feet and it stimulates your heart, diaphragm."
                            android:textAlignment="center"
                            android:layout_marginBottom="5dp"
                            android:textColor="#050505"
                            android:textSize="18sp" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/imageView11"
                            android:layout_width="match_parent"
                            android:layout_height="194dp"
                            app:srcCompat="@drawable/the_tree_pose" />

                        <TextView
                            android:id="@+id/textView147"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/imageView11"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/aclonica"
                            android:text="Tree – Vrksasana"
                            android:textAlignment="center"
                            android:textColor="#040404"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/textView148"
                            android:layout_width="369dp"
                            android:layout_height="match_parent"
                            android:layout_below="@id/textView147"
                            android:layout_marginTop="4dp"
                            android:padding="10dp"
                            android:text="Improves body balance and strengthens foot muscles,gives a properposture to your body and increases blood circulation."
                            android:textAlignment="center"
                            android:layout_marginBottom="5dp"
                            android:textColor="#050505"
                            android:textSize="18sp" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/imageView12"
                            android:layout_width="match_parent"
                            android:layout_height="194dp"
                            app:srcCompat="@drawable/boat_pose" />

                        <TextView
                            android:id="@+id/textView149"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/imageView12"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/aclonica"
                            android:text="Boat – Navasana"
                            android:textAlignment="center"
                            android:textColor="#040404"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/textView150"
                            android:layout_width="369dp"
                            android:layout_height="match_parent"
                            android:layout_below="@id/textView149"
                            android:layout_marginTop="4dp"
                            android:padding="10dp"
                            android:text="The Boat yoga requires for one to be stable which means,straight back,chin looking forward, while knees and arms are locked. This is not an easy posture. Through it you build strong abdominal and core straight."
                            android:textAlignment="center"
                            android:layout_marginBottom="5dp"
                            android:textColor="#050505"
                            android:textSize="18sp" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/imageView13"
                            android:layout_width="match_parent"
                            android:layout_height="194dp"
                            app:srcCompat="@drawable/the_crow_pose" />

                        <TextView
                            android:id="@+id/textView151"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/imageView13"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/aclonica"
                            android:text="Crow – Bakasana"
                            android:textAlignment="center"
                            android:textColor="#040404"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/textView152"
                            android:layout_width="369dp"
                            android:layout_height="match_parent"
                            android:layout_below="@id/textView151"
                            android:layout_marginTop="4dp"
                            android:padding="10dp"
                            android:text="The Crow yoga pose strengthens the wrists, forearms and abdomen while also stretching the hamstring. Balance is crucial for this pose."
                            android:textAlignment="center"
                            android:layout_marginBottom="5dp"
                            android:textColor="#050505"
                            android:textSize="18sp" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="6dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/imageView14"
                            android:layout_width="match_parent"
                            android:layout_height="194dp"
                            app:srcCompat="@drawable/king_dancer" />

                        <TextView
                            android:id="@+id/textView153"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/imageView14"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/aclonica"
                            android:text="King Dancer – Natarajasana"
                            android:textAlignment="center"
                            android:textColor="#040404"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/textView154"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@id/textView153"
                            android:layout_marginTop="4dp"
                            android:padding="10dp"
                            android:text="The King Dancer yoga pose strengthens up your legs, improves balance and core strength while also stretches your shoulders."
                            android:textAlignment="center"
                            android:layout_marginBottom="10dp"
                            android:textColor="#050505"
                            android:textSize="18sp" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>